<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sports Online</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular/angular.js"></script>
    <script src="~/Scripts/angular/angular-route.js"></script>
    <script src="~/Scripts/StoreApp.js"></script>
    <script src="~/Scripts/StoreRoute.js"></script>

    <style>

        .navbar-right {
            float:right !important;
            margin-left: 15px;
            margin-right:15px;
        }

    </style>

</head>
<body ng-app="mainApp">

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Online Sport Store", "Index", "Home", new { @class="navbar-brand"})
            </div>
            <ul class="nav navbar-nav">
                <li class="active"> @Html.ActionLink("Products", "List", "Products") </li>
                <li> @Html.ActionLink("Category", "Index", "Category") </li>
                <li> @Html.ActionLink("Brand", "Index", "Brand") </li>
            </ul>
        </div>
    </nav>
   
    <div class="row panel">
        <div class="col-xs-12 col-sm-12 ">
            @*@RenderBody()*@
            <ng-view></ng-view>
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Sports Online</p>
    </footer>

   
    
</body>
</html>